{
    "name": "datagutten/descriptionmaker",
    "description": "Create description pages for TV series or music",
    "type": "library",
    "require": {
        "ext-dom": "*",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-simplexml": "*",
        "datagutten/audio-metadata": "^3.0",
        "datagutten/imagehost": "^3.1",
        "datagutten/musicbrainz": "^3.3",
        "datagutten/tools": "^1.8",
        "datagutten/tvdb": "dev-scrape",
        "datagutten/video-tools": "^2.0|dev-master",
        "orpheusnet/logchecker": "^0.8.6",
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "datagutten",
            "email": "datagutten@datagutten.net"
        }
    ],
    "autoload": {
        "classmap": [
            "functions_description.php"
        ],
        "psr-4": {
            "datagutten\\descriptionMaker\\": "src"
        },
        "files": [
            "load_config.php"
        ]
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "source"
    },
    "bin": [
        "scripts/description_album",
        "scripts/mediainfo",
        "scripts/snapshots",
        "scripts/tv_show"
    ]
}
